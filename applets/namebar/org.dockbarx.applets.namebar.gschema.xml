<?xml version="1.0" encoding="utf-8"?>

<schemalist>
  <schema id="org.dockbarx.applets.namebar" path="/org/dockbarx/applets/namebar/">

    <key name='theme' type='s'>
      <default>'Dust-ish'</default>
      <summary>Theme</summary>
    </key>

    <key name='show-title' type='s'>
      <choices>
        <choice value='always'/>
        <choice value='maximized'/>
      </choices>
      <default>'always'</default>
      <summary>Show Title</summary>
    </key>

    <key name='expand' type='b'>
      <default>true</default>
      <summary>Expand</summary>
    </key>

    <key name='size' type='i'>
      <default>500</default>
      <range min="100" max="10000"/>
      <summary>Size</summary>
    </key>
    
    <key name='active-color' type='s'>
      <default>'#EEEEEE'</default>
      <summary>Active Color</summary>
    </key>

    <key name='passive-color' type='s'>
      <default>'#AAAAAA'</default>
      <summary>Passive Color</summary>
    </key>

    <key name='active-alpha' type='i'>
      <default>255</default>
      <range min="0" max="255"/>
      <summary>Active Transparency</summary>
    </key>

    <key name='passive-alpha' type='i'>
      <default>255</default>
      <range min="0" max="255"/>
      <summary>Passive Transparency</summary>
    </key>

    <key name='active-font' type='s'>
      <default>'Sans 11'</default>
      <summary>Active Font</summary>
    </key>
    
    <key name='passive-font' type='s'>
      <default>'Sans 11'</default>
      <summary>Passive Bold</summary>
    </key>
    
    <key name='alignment' type='s'>
      <choices>
        <choice value='left / top'/>
        <choice value='center'/>
        <choice value='right / bottom'/>
      </choices>
      <default>'left / top'</default>
      <summary>Text Alignment</summary>
    </key>
    
    <key name='use-custom-layout' type='b'>
      <default>false</default>
      <summary>Use Custom Layout</summary>
    </key>
    
    <key name='custom-layout' type='s'>
      <default>'minimize,maximize,close'</default>
      <summary>Custom Layout</summary>
    </key>

  </schema>

</schemalist>

